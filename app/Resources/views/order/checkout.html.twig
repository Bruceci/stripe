{% extends 'base.html.twig' %}

{% block body %}
    <h1>Checkout</h1>

    <table>
        <tbody>
            {% for product in products %}
                <tr>
                    <th>{{ product.name }}</th>
                    <td>{{ product.price }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <td>{{ cart.total }}</td>
            </tr>
        </tfoot>
    </table>
{% endblock %}